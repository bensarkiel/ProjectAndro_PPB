<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0C0C0"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Saldo"
            android:textSize="28dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tambah Saldo Akun."
            android:textSize="25dp"
            android:layout_marginLeft="8dp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Jumlah Saldo:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="Rp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:textColor="#0000FF"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintLeft_toRightOf="@+id/textView2"/>


        <TextView
            android:id="@+id/view_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text=""
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:textColor="#0000FF"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            app:layout_constraintLeft_toRightOf="@+id/textView3"/>

        <EditText
            android:id="@+id/add_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Masukkan Nominal"
            android:textSize="18dp"
            android:textColor="#0000FF"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:id="@+id/add2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="Tambah"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/add_amount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add2"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>