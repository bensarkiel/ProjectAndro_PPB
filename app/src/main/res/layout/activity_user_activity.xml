<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/background2"
    tools:context=".useractivity.UserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/upcoming_movie"
            app:layout_constraintRight_toRightOf="@+id/upcoming_movie"
            android:src="@drawable/coming_soon"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/book_show"
            app:layout_constraintLeft_toLeftOf="@+id/book_show"
            android:src="@drawable/book_show"
            />

        <Button
            android:id="@+id/upcoming_movie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Upcoming Movie"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            app:layout_constraintTop_toBottomOf="@+id/imageView1"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/book_show"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Book Show"
            android:background="@drawable/roundedbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/book_show"
            app:layout_constraintLeft_toLeftOf="@+id/my_booking"
            app:layout_constraintRight_toRightOf="@+id/my_booking"
            android:src="@drawable/my_booking"/>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/book_show"
            app:layout_constraintLeft_toLeftOf="@+id/my_profile"
            app:layout_constraintRight_toRightOf="@+id/my_profile"
            android:src="@drawable/my_profile"/>

        <Button
            android:id="@+id/my_booking"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="my booking"
            android:background="@drawable/roundedbutton"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <Button
            android:id="@+id/my_profile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="My Profile"
            android:background="@drawable/roundedbutton"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/my_booking"
            app:layout_constraintLeft_toLeftOf="@+id/user_bank"
            app:layout_constraintRight_toRightOf="@+id/user_bank"
            android:src="@drawable/bank"/>


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/my_profile"
            app:layout_constraintLeft_toLeftOf="@+id/download_movie"
            app:layout_constraintRight_toRightOf="@+id/download_movie"
            android:src="@drawable/download"/>


        <Button
            android:id="@+id/user_bank"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="your wallet"
            android:background="@drawable/roundedbutton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7"/>

        <Button
            android:id="@+id/download_movie"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Download Movie"
            android:background="@drawable/roundedbutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"/>


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/user_bank"
            app:layout_constraintLeft_toLeftOf="@+id/give_feedback"
            app:layout_constraintRight_toRightOf="@+id/give_feedback"
            android:src="@drawable/feedback"/>

        <Button
            android:id="@+id/give_feedback"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Give Feedback"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>