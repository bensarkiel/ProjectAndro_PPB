<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:scrollbars="none"
    android:background="#FFFFFF"
    tools:context=".theatreactivity.AddShow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Show"
            android:textSize="30dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Select movie pic"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:id="@+id/add_show_imageView"
            android:layout_width="200dp"
            android:layout_marginTop="40dp"
            android:layout_height="200dp"
            android:src="@drawable/login"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/movie_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Movie name"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/add_show_imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/lang"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Language"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/movie_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/director_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Director name"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/lang"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/cast_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Cast name"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/director_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Category"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/cast_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/timing"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Show Date &amp; time"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:inputType="text|date|time"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/category"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/available_seat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Available seat"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/timing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Address"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/available_seat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/theatre_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Theatre name"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <EditText
            android:id="@+id/theatre_movie_price"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter movie price"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/theatre_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/add_show"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Add Show"
            android:textColor="#000000"
            android:textSize="18dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/theatre_movie_price"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>