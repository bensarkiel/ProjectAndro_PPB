<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/upm_imageView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/upm_moviename"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="MovieName"
            android:textColor="#000000"
            android:padding="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/upm_imageView"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/upm_year"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="8dp"
            android:text="year"
            android:singleLine="true"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/upm_imageView"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/upm_Update"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:text="Update"
            android:textColor="#000000"
            android:textSize="15dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/upm_moviename"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/upm_Delete"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:text="Delete"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button"
            app:layout_constraintTop_toBottomOf="@+id/upm_year"
            app:layout_constraintRight_toRightOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/upm_Update"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.cardview.widget.CardView>