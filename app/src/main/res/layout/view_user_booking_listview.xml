<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DAA520"
        android:id="@+id/constraint2"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking ID:"
            android:textSize="19dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie ID:"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/b_booking_id"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Name:"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_id"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName:"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_name"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Time:"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/b_user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat:"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/b_show_time"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/b_booking_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking ID"
            android:textSize="19dp"
            android:textColor="#DC143C"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="98dp"
            app:layout_constraintTop_toBottomOf="@+id/Image_view"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/b_movie_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie ID"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="76dp"
            android:textColor="#DC143C"
            android:textSize="18dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/b_booking_id"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/b_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movier Name"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="5dp"
            android:textColor="#DC143C"
            android:textSize="18dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_id"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/b_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:textColor="#DC143C"
            android:textSize="18dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/b_movie_name"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/b_show_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Time"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="5dp"
            android:textColor="#DC143C"
            android:textSize="18dp"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@+id/b_user_name"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/b_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seat"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="5dp"
            android:textColor="#DC143C"
            android:textSize="18dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@+id/b_show_time"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@+id/b_seat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@+id/constraint2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>